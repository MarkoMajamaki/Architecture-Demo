{
   // Use IntelliSense to find out which attributes exist for C# debugging
   // Use hover for the description of the existing attributes
   // For further information visit https://github.com/OmniSharp/omnisharp-vscode/blob/master/debugger-launchjson.md
   "version": "0.2.0",
   "configurations": [
    {
        "name": "OrderApi with Kubernetes",
        "type": "coreclr",
        "request": "launch",
        "preLaunchTask": "bridge-to-kubernetes.compound",
        "program": "${workspaceFolder}/backend/OrderApi/OrderApi/bin/Debug/net5.0/OrderApi.dll",
        "args": [],
        "cwd": "${workspaceFolder}/backend/OrderApi/OrderApi",
        "stopAtEntry": false,
        "env": {
            "ASPNETCORE_ENVIRONMENT": "Development",
            "ASPNETCORE_URLS": "http://+:80"
        },
        "sourceFileMap": {
            "/Views": "${workspaceFolder}/Views"
        }
    },
    {
        "name": "CustomerApi",
        "type": "coreclr",
        "request": "launch",
        "preLaunchTask": "build",
        "program": "${workspaceFolder}/backend/CustomerApi/CustomerApi/bin/Debug/net5.0/CustomerApi.dll",
        "args": [],
        "cwd": "${workspaceFolder}/backend/CustomerApi/CustomerApi",
        "stopAtEntry": false,
        "serverReadyAction": {
            "action": "openExternally",
            "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
        },
        "env": {
            "ASPNETCORE_ENVIRONMENT": "Development"
        },
        "sourceFileMap": {
            "/Views": "${workspaceFolder}/Views"
        }
    },
    {
        "name": "OrderApi",
        "type": "coreclr",
        "request": "launch",
        "preLaunchTask": "build",
        "program": "${workspaceFolder}/backend/OrderApi/OrderApi/bin/Debug/net5.0/OrderApi.dll",
        "args": [],
        "cwd": "${workspaceFolder}/backend/OrderApi/OrderApi",
        "stopAtEntry": false,
        "serverReadyAction": {
            "action": "openExternally",
            "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
        },
        "env": {
            "ASPNETCORE_ENVIRONMENT": "Development"
        },
        "sourceFileMap": {
            "/Views": "${workspaceFolder}/Views"
        }
    },
    {
        "name": "Frontend",
        "type": "dart",
        "request": "launch",
        "program": "frontend/lib/main.dart"
    }
]
}